<odoo>
    <record id="estate_property_model_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate Property List">
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="ESTATE">
                <sheet>
                    <group>
                        <group>
                            <label for="name"/>
                            <h1 class="mb32">
                                <field name="name" class="mb16"/>
                            </h1>
                            <field name="property_type_id" />
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="totalarea" />
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Base">
                                <group>
                                    <group>
                                        <field name="postcode"/>
                                        <field name="date_availability"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                    </group>
                                    <group>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <field name="garden"/>
                                        <field name="garden_area"/>
                                        <field name="garden_orientation"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Price">
                                <group>
                                    <field name="expected_price"/>
                                    <field name="selling_price"/>
                                </group>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="seller_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <group>
                                    <field name="offer_ids"/>
                                </group>
                            </page>
                        </notebook>
                        <group>
                            <field name="state" invisible="0" />
                            <field name="active" invisible="0"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Objects">
                <field name="name" string="Estate" />
                <field name="description"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
